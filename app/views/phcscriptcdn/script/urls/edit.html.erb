<!-- Title System -->
<% phc_title "Script Version" %>
<% phc_title_tagline "Update Script Version" %>

<!-- Page Header -->
<div class="row">
	<div class="col-lg-12">

		<!-- Bread Crumbs -->
		<ol class="breadcrumb">
			<li><%= link_to "Script Listings Index", script_listings_path %></li>
			<li><%= link_to "URL Index", script_urls_path %></li>
			<li class="active"><%= yield(:phc_title_tagline) %></li>
		</ol>

		<!-- Page Title -->
		<h3 class="page-title">
			<%= yield(:phc_title) %> </br>
			<small><%= yield(:phc_title_tagline) %></small>
		</h3>

	</div>
</div>

<!-- Main Content -->
<div class="row">
	<div class="col-lg-12">

		<%= render 'form', script_url: @script_url %>
		<%= link_to 'Show', @script_url, class: "btn btn-primary"  %> |
		<%= link_to 'Back', script_urls_path, class: "btn btn-primary"  %>

	</div>
</div>

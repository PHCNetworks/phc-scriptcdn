<!-- Title System -->
<% phc_title "PHCScriptCDN - Script CDN Listing Manager" %>
<% phc_title_tagline "ScriptCDN Listing Index" %>

<!-- Page Header -->
<div class="row">
	<div class="col-lg-12">

		<!-- Bread Crumbs -->
		<ol class="breadcrumb">
			<li><%= link_to "Script Information", script_informations_path %></li>
			<li class="active"><%= yield(:phc_title_tagline) %></li>
		</ol>

		<!-- Page Title -->
		<h3 class="page-title">
			<%= yield(:phc_title) %> </br>
			<small><%= yield(:phc_title_tagline) %></small>
		</h3>

	</div>
</div>

<!-- Main Content -->

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @script_listings.each do |script_listing| %>
      <tr>
        <td><%= link_to 'Show', script_listing %></td>
        <td><%= link_to 'Edit', edit_script_listing_path(script_listing) %></td>
        <td><%= link_to 'Destroy', script_listing, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Script Listing', new_script_listing_path %>
